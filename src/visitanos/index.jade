extends ../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../';

block content
  main.visitanos
    section.visitanos__hero
      div.visitanos__hero__wrapper
        h1.visitanos__hero__title Visitanos
        img(src="/images/underline.png")
      span.visitanos__hero__text Si está planeando un viaje a mendoza,<br> nos encantaría que nos visite
      ul.visitanos__hero__social
        li
          a(href="#" target="_blank")
            i.fab.fa-facebook-f
        li
          a(href="#" target="_blank")
            i.fab.fa-instagram
        li
          a(href="#" target="_blank")
            i.fab.fa-twitter
    section.visitanos__degustaciones
      div.visitanos__degustaciones__container
        div.visitanos__degustaciones__container-wrapper
        div.visitanos__degustaciones__container-wrapper
      div.visitanos__degustaciones__group
        div.visitanos__degustaciones__group-wrapper
        div.visitanos__degustaciones__group-wrapper
          div.visitanos__degustaciones__content
            div.visitanos__degustaciones__title-wrapper
              h2.visitanos__degustaciones__title Degustaciones
            p.visitanos__degustaciones__text Nuestros guías especializados realizan tours para grupos reducidos de visitantes. Recomendamos anticipación para obtener la disponibilidad que más se adecue a sus necesidades.
    section.visitanos__ubicacion
      div.visitanos__ubicacion__container
        form.visitanos__ubicacion__form
          div.visitanos__ubicacion__form-wrapper
            p.visitanos__ubicacion__form-text Para reservar, por favor completar el siguiente formulario. Nuestro equipo de hospitalidad se pondrá en contacto en las próximas 48 horas para agendar su visita.
            span.visitanos__ubicacion__form-disclaimer Considere que el envío del formulario no garantiza la reserva.
            div.visitanos__ubicacion__form-group
              input.visitanos__ubicacion__form-input(placeholder="Nombre")
              label.visitanos__ubicacion__form-label Nombre
            div.visitanos__ubicacion__form-group
              input.visitanos__ubicacion__form-input(placeholder="Email")
              label.visitanos__ubicacion__form-label Email
            div.visitanos__ubicacion__form-group
              input.visitanos__ubicacion__form-input(placeholder="Teléfono")
              label.visitanos__ubicacion__form-label Teléfono
            div.visitanos__ubicacion__form-group.visitanos__ubicacion__form-group--select
              select.visitanos__ubicacion__form-select
                option(selected hidden disabled) País
                option Argentina
                option Chile
                option Uruguay
                option Bolivia
            div.visitanos__ubicacion__form-group.visitanos__ubicacion__form-group--select
              select.visitanos__ubicacion__form-select
                option(selected hidden disabled) Motivo
                option Reserva
                option Consulta
                option Otro
            div.visitanos__ubicacion__form-group
              textarea.visitanos__ubicacion__form-input.visitanos__ubicacion__form-input--textarea(placeholder="Comentario")
              label.visitanos__ubicacion__form-label Comentario
            div.visitanos__ubicacion__form-group.visitanos__ubicacion__form-group--button
              button.visitanos__ubicacion__form-button Enviar

        div.visitanos__ubicacion__map
          iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3346.769981946972!2d-68.86208494875372!3d-32.98346988081653!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x967e0ae29300f855%3A0x7ba050fb1f23d63d!2sBodega%20y%20Cavas%20de%20Weinert!5e0!3m2!1ses-419!2sar!4v1600966099643!5m2!1ses-419!2sar" allowfullscreen="" aria-hidden="false" tabindex="0")

    section.visitanos__distribucion
      div.visitanos__distribucion__content
        h2.visitanos__distribucion__title Distribución
        span.visitanos__distribucion__text Weinert distribuye sus vinos en vinotecas y restaurantes selectos en las principales ciudades del mundo. Para mayor información, consulte al importador del país correspondiente.
        a.visitanos__distribucion__button(href="#") Ver más
